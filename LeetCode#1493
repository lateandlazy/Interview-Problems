class Solution:
    def longestSubarray(self, nums: List[int]) -> int:
        left = 0
        zero = 0
        ans = 0
        n = len(nums)
        for j in range(n):
            if nums[j] == 0:
                zero += 1
            while zero > 1:
                if nums[left] == 0:
                    zero -= 1
                left += 1
            ans = max(ans, j - left)
        return ans 
